@model StockManagement.Services.DTOs.Product.ProductDto

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle"></i> Delete Product</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i> Are you sure you want to delete this product?
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i> <strong>Note:</strong> This action will mark the product
                        as deleted.
                        The product will no longer appear in the product list, but existing orders containing this
                        product will remain unchanged.
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">ID:</div>
                        <div class="col-md-8">@Model.Id</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Name:</div>
                        <div class="col-md-8">@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Price:</div>
                        <div class="col-md-8">@Model.Price.ToString("C")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Stock Quantity:</div>
                        <div class="col-md-8">@Model.StockQuantity</div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>