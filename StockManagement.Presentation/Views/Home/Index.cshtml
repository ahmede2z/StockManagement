@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="jumbotron bg-light p-5 rounded">
        <h1 class="display-4">Welcome to Stock Management System</h1>
        <p class="lead">A simple and efficient way to manage your inventory and orders.</p>
        <hr class="my-4">
        <p>Use the navigation menu or the cards below to access different features of the system.</p>
    </div>

    <div class="row mt-5">
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box text-primary"></i> Product Management</h5>
                    <p class="card-text">Manage your product inventory. Add new products, update existing ones, and
                        monitor stock levels.</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Add new products
                        </li>
                        <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Update product
                            details</li>
                        <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Monitor stock levels
                        </li>
                    </ul>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> Go to Products
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-cart text-success"></i> Order Management</h5>
                    <p class="card-text">Create and manage orders. The system automatically checks stock availability
                        and updates inventory.</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Create new orders
                        </li>
                        <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> View order details
                        </li>
                        <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Automatic stock
                            updates</li>
                    </ul>
                    <a asp-controller="Order" asp-action="Index" class="btn btn-success">
                        <i class="bi bi-arrow-right"></i> Go to Orders
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
